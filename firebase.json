{
  "functions": {
    "predeploy": [],
    "runtime": "nodejs20"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/setSession", "function": "setSession" },
      { "source": "/homepage", "function": "authCheckHomepage" },
      { "source": "/homepage.html", "function": "authCheckHomepage" },
      { "source": "/coach", "function": "authCheckCoach" },
      { "source": "/coach.html", "function": "authCheckCoach" },
      { "source": "/admin", "function": "authCheckAdmin" },
      { "source": "/admin.html", "function": "authCheckAdmin" }
    ]
  }
}